            var rndm = new Random(item.LName.Length*item.FName.Length);
            int hue = rndm.Next(0, 360);
        <tr>
            <td>
                    <div class="No-Img" style="background-color:hsl(@hue, 55%, 60%)">
                        <p>@item.FName.ToCharArray()[0]@item.LName.ToCharArray()[0]</p>
